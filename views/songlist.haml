.w3-row
  %form{action: "clear", method: "post"}
    %button.w3-block.w3-button-rsvp-yes{type: "submit"} Clear Song List
  - unless list.nil?
    - puts list.inspect
    - list.each_slice(3) do |s|    
      .w3-col.l4
        %p= "#{s[0].artist} - #{s[0].name}"
      .w3-col.l4
        - if s.length > 1
          %p= "#{s[1].artist} - #{s[1].name}"
      .w3-col.l4
        - if s.length > 2
          %p= "#{s[2].artist} - #{s[2].name}"
